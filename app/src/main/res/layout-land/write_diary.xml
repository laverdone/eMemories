<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical" android:padding="0dp"
	    android:background="#FFFFFF">
	<com.glm.view.AnimationPageLayout
	    android:id="@+id/Page"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="horizontal" >
	    <!-- SIDEBAR -->
	    <LinearLayout
	        android:id="@+id/sidebarLayout"
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:orientation="vertical" 
	        android:animateLayoutChanges="true"
	        android:showDividers="middle"
            android:divider="?android:dividerHorizontal"
            android:background="@color/traslucent">
            <ListView
                    android:id="@+id/preview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:stretchMode="none"
                    android:gravity="center" android:scrollingCache="true" android:animateLayoutChanges="true"/>
		</LinearLayout>
	    <!-- SIDEBAR -->
	    
	    <!-- CONTENT -->
	    <RelativeLayout
	        android:id="@+id/pageLayout"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent" 
	        android:background="#FFFFFF">
	       <!--<com.glm.view.TextureHandWrite android:id="@+id/page"
	           android:layout_width="match_parent"
	           android:layout_height="match_parent"
	           android:clickable="true"/>-->
	    </RelativeLayout>
		<!-- CONTENT -->
	</com.glm.view.AnimationPageLayout> 
</FrameLayout>
