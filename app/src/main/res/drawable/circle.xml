<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
	<item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="oval">
            <gradient android:startColor="#0D47A1" android:endColor="#1565C0"
                android:angle="90" />
            <padding android:left="7dp" android:top="7dp" android:right="7dp"
                android:bottom="7dp" />
            <corners android:radius="6dp" />
            <stroke android:width="0dp" android:color="#FF8A80" />
        </shape>
    </item>
    <item android:state_enabled="false">
		<shape xmlns:android="http://schemas.android.com/apk/res/android"
			android:shape="oval">
			<gradient android:startColor="#0D47A1" android:endColor="#1565C0"
				android:angle="180" />
			<padding android:left="7dp" android:top="7dp" android:right="7dp"
				android:bottom="7dp" />
			<corners android:radius="6dp" />
			<stroke android:width="0dp" android:color="#FF8A80" />
		</shape>
	</item>
    <item>
		<shape xmlns:android="http://schemas.android.com/apk/res/android"
			android:shape="oval">
			<gradient android:startColor="#1565C0" android:endColor="#0D47A1"
				android:angle="270" />
			<padding android:left="7dp" android:top="7dp" android:right="7dp"
				android:bottom="7dp" />
			<corners android:radius="6dp" />
			<stroke android:width="0dp" android:color="#FF8A80" />
		</shape>
	</item>
</selector>
